{
  "name": "resumator",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts --max_old_space_size=4096 build",
    "test": "react-scripts test",
    "coverage": "npm test -- --coverage --watchAll=false",
    "lint": "eslint src/",
    "cypress": "cypress open",
    "cypress:headless": "cypress run --browser chrome --headless",
    "test:e2e": "env-cmd -f .env.test start-server-and-test start 3000 cypress",
    "test:e2e:ci": "env-cmd -f .env.test start-server-and-test start 3000 cypress:headless",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@date-io/date-fns": "2.x",
    "@emotion/core": "^11.0.0",
    "@emotion/css": "^11.5.0",
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@mui/icons-material": "^5.1.1",
    "@mui/lab": "^5.0.0-alpha.49",
    "@mui/material": "^5.1.1",
    "@mui/styles": "^5.1.1",
    "@react-pdf/renderer": "^1.6.12",
    "@react-pdf/styled-components": "^1.4.0",
    "@rebass/forms": "^4.0.6",
    "date-fns": "^2.16.1",
    "debounce": "^1.2.1",
    "docxtemplater": "^3.26.4",
    "docxtemplater-image-module-free": "^1.1.1",
    "draft-js": "^0.11.7",
    "draft-js-export-html": "^1.4.1",
    "draft-js-import-html": "^1.4.1",
    "emotion-theming": "^11.0.0",
    "file-saver": "^2.0.5",
    "firebase": "^8.2.3",
    "fuse.js": "^6.4.6",
    "immutability-helper": "^3.1.1",
    "pizzip": "^3.0.6",
    "react": "^17.0.2",
    "react-dnd": "^14.0.4",
    "react-dnd-html5-backend": "^14.0.2",
    "react-dom": "^17.0.2",
    "react-firebase-hooks": "^2.2.0",
    "react-hook-form": "^6.14.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "react-select": "^5.1.0",
    "react-sortable-hoc": "^2.0.0",
    "rebass": "^4.0.7",
    "yup": "^0.32.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.12.1",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.1.9",
    "@types/debounce": "^1.2.1",
    "@types/draft-js": "^0.11.6",
    "@types/file-saver": "^2.0.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@types/pizzip": "^3.0.1",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.7",
    "@types/rebass": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "cypress": "^9.0.0",
    "cypress-firebase": "^2.0.0",
    "env-cmd": "^10.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.22.0",
    "firebase-admin": "^9.9.0",
    "firebase-tools": "^9.2.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.12.4",
    "ts-jest": "^27.0.2",
    "typescript": "^4.4.3"
  },
  "resolutions": {
    "react-scripts/**/set-value": "^4.1.0",
    "react-scripts/**/glob-parent": "^6.0.2",
    "react-scripts/**/immer": "^9.0.6",
    "react-scripts/**/nth-check": "^2.0.1",
    "**/json-ptr": "^3.0.0",
    "**/node-fetch": "^3.1.0",
    "**/browserslist": "^4.17.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run coverage"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{md,html,css}": "prettier --write"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/components/constants.ts",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 12,
        "functions": 3,
        "lines": 4,
        "statements": 4
      }
    }
  }
}
